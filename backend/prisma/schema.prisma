generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Difficulty {
  Easy
  Medium
  Hard
}

enum SubmissionStatus {
  ACCEPTED
  REJECTED
  PENDING
  COMPILE_ERROR
  RUNTIME_ERROR
  TIME_LIMIT_EXCEEDED
  MEMORY_LIMIT_EXCEEDED
}

enum InterviewSessionStatus {
  ACTIVE
  COMPLETED
  ABANDONED
}

enum InterviewQuestionStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  SKIPPED
}

enum InterviewQuestionOutcome {
  PASSED
  FAILED
  PARTIAL
}

enum ProblemType {
  ALGORITHM
  DESIGN
}

enum ComparisonType {
  STRICT            // Default: exact match required
  ORDER_INSENSITIVE // Sort arrays before comparison (any dimension)
  FLOAT_TOLERANCE   // Numbers match within 10^-5 tolerance  
  SUBSET_MATCH      // Any valid answer from multiple options
}

model Problem {
  id          String      @id @default(uuid())
  slug        String
  title       String
  description String
  starterCode String?
  difficulty  Difficulty  @default(Medium)
  type        ProblemType @default(ALGORITHM)
  className   String?     // Required for DESIGN problems
  timeLimit   Int         @default(45) // Minutes
  
  // Execution Constraints
  timeoutMs       Int      @default(5000) // Execution time limit in milliseconds (increased from 2000ms)
  memoryLimitMb   Int      @default(128)  // Memory limit in megabytes

  tags        String[]
  
  // Execution Metadata
  inputTypes  String[]    @default([]) // e.g. ["ListNode", "number"]
  returnType  String?     // e.g. "ListNode"
  comparisonType ComparisonType @default(STRICT) // Output comparison strategy
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  testCases   TestCase[]
  submissions Submission[]
  lists       ProblemsOnLists[]
  interviewQuestions InterviewQuestion[]

  userId      String
  user        User        @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([difficulty])
  @@index([userId, difficulty])
  @@unique([userId, slug])
}

model TestCase {
  id             String  @id @default(uuid())
  input          String
  expectedOutput String
  isHidden       Boolean @default(false)
  problemId      String
  problem        Problem @relation(fields: [problemId], references: [id])
}

model Submission {
  id             String   @id @default(uuid())
  code           String
  language       String
  status         String
  output         String
  createdAt      DateTime @default(now())

  // Performance metrics
  executionTime  Float?   // in milliseconds
  memoryUsed     Float?   // in bytes

  // Solution marking
  isSolution     Boolean  @default(false)
  solutionName   String?

  problem   Problem @relation(fields: [problemId], references: [id])
  problemId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  interviewQuestionId String?
  interviewQuestion   InterviewQuestion? @relation(fields: [interviewQuestionId], references: [id])

  @@index([userId])
  @@index([problemId])
  @@index([status])
  @@index([createdAt])
  @@index([executionTime])
  @@index([memoryUsed])
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([userId, status, createdAt])
  @@index([userId, problemId])
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  name        String?
  googleId    String?      @unique
  profilePicture String?
  lastLogin   DateTime?
  submissions     Submission[]
  problems        Problem[]
  lists           List[]
  dailyStudyLogs  DailyStudyLog[]
  interviewSessions InterviewSession[]
  resume          Resume?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // System Design Relations
  systemDesignProblems    SystemDesignProblem[]
  systemDesignSubmissions SystemDesignSubmission[]
}

model SystemDesignProblem {
  id              String   @id @default(uuid())
  title           String
  slug            String
  description     String
  difficulty      Difficulty @default(Medium)
  defaultDuration Int      @default(45) // Minutes
  tags            String[]
  constraints     String[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  submissions     SystemDesignSubmission[]
  solutions       SystemDesignSolution[]
  lists           SystemDesignProblemsOnLists[]

  userId          String
  user            User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@unique([userId, slug])
}

model SystemDesignSubmission {
  id               String   @id @default(uuid())
  problemId        String
  problem          SystemDesignProblem @relation(fields: [problemId], references: [id])

  userId           String
  user             User     @relation(fields: [userId], references: [id])

  excalidrawJson   Json     // Store Excalidraw elements and appState
  notesMarkdown    String?
  timeSpentSeconds Int      @default(0)
  status           String   @default("in_progress") // in_progress, completed
  isSolution       Boolean  @default(false)
  solutionName     String?

  score            Int?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([problemId])
  @@index([userId, status])
  @@index([userId, createdAt])
}

model SystemDesignSolution {
  id              String   @id @default(uuid())
  problemId       String
  problem         SystemDesignProblem @relation(fields: [problemId], references: [id])

  title           String
  description     String
  diagramSnapshot String? // URL to image
  excalidrawJson  Json?   // Optional full diagram

  author          String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([problemId])
}

model DailyStudyLog {
  id                String   @id @default(uuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  date              DateTime @db.Date // Store as date only (YYYY-MM-DD)
  totalStudySeconds Int      @default(0)
  sessionCount      Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([userId, date]) // Ensure one log per user per day
  @@index([userId])
  @@index([date])
}

model List {
  id          String   @id @default(uuid())
  name        String
  description String?
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  problems    ProblemsOnLists[]
  systemDesignProblems SystemDesignProblemsOnLists[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model ProblemsOnLists {
  listId    String
  list      List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  problemId String
  problem   Problem  @relation(fields: [problemId], references: [id], onDelete: Cascade)

  addedAt   DateTime @default(now())

  @@id([listId, problemId])
  @@index([listId])
  @@index([problemId])
}

model SystemDesignProblemsOnLists {
  listId    String
  list      List     @relation(fields: [listId], references: [id], onDelete: Cascade)

  problemId String
  problem   SystemDesignProblem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  addedAt   DateTime @default(now())

  @@id([listId, problemId])
  @@index([listId])
  @@index([problemId])
}

model InterviewSession {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])

  status        String   @default("ACTIVE") // ACTIVE, COMPLETED, ABANDONED

  // Filters used to create this session
  difficulty    String[] // Easy, Medium, Hard
  statusFilter  String[] // Solved, Unsolved, etc.
  tags          String[]
  lists         String[]
  questionCount Int

  startTime     DateTime @default(now())
  endTime       DateTime?

  questions     InterviewQuestion[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
}

model InterviewQuestion {
  id                 String           @id @default(uuid())
  interviewSessionId String
  interviewSession   InterviewSession @relation(fields: [interviewSessionId], references: [id], onDelete: Cascade)

  problemId          String
  problem            Problem          @relation(fields: [problemId], references: [id])

  orderIndex         Int

  startTime          DateTime?
  endTime            DateTime?

  status             String           @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, SKIPPED
  outcome            String?          // PASSED, FAILED, PARTIAL

  autoSubmitted      Boolean          @default(false)

  submissions        Submission[]

  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@index([interviewSessionId])
  @@index([problemId])
  @@index([status])
}

// Resume Builder Models
model Resume {
  id                  String          @id @default(uuid())
  userId              String          @unique
  user                User            @relation(fields: [userId], references: [id])
  latestVersionNumber Int             @default(0)
  versions            ResumeVersion[]
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@index([userId])
}

model ResumeVersion {
  id            String   @id @default(uuid())
  resumeId      String
  resume        Resume   @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  versionNumber Int
  contentJSON   Json     // Full ResumeContent state
  designJSON    Json     // Full ResumeDesign state
  templateId    String   @default("single")
  createdAt     DateTime @default(now())

  @@index([resumeId])
  @@index([resumeId, versionNumber])
  @@unique([resumeId, versionNumber])
}
